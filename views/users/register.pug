-var title = 'Register'
include ../template/head.pug
body
  include ../template/navbar.pug
  .container
    include ../template/errors.pug
    .col-md-6.mx-auto
      .card.card-body
        img.logo(src="/img/images.jpeg", alt="")
        h3.text-center Account Register
        form(action="/users/register", method="post")
          .form-group
            label(for="name") Name
            input.form-control(type="text", name='name',value=name)
          .form-group
            label(for="email") Email
            input.form-control(type="email", name='email',value=email, required)
          .form-group
            label(for="password") Password
            input.form-control(type="password",  name='password',value=password, required)
          .form-group
            label(for="password2") Confirm Password
            input.form-control(type="password", name='password2',value=password2,  required)
          button.btn.btn-primary(type="submit") Submit


include ../template/footer.pug