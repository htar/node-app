include ../template/head.pug
body
  include ../template/navbar.pug
  .container
    if ideas && ideas.length
    each idea,index in ideas
      .card.card-body.mb-2
        h4= idea.title
        p= idea.details
        a.btn.btn-dark.btn-block.mb-2(href=`/ideas/edit/` + idea.id) Edit
        form(action=`/ideas/${idea.id}?_method=DELETE`, method="post")
          input(type="hidden", name='_method', value='DELETE')
          input.btn.btn-danger.btn-block(type="submit", value="Delete")


include ../template/footer.pug